<h2><%= @anime.title %></h2>
<h3><%= @anime.creator %></h3>
<h4><%= @anime.category.name %></h4>
<p><%= @anime.description %></p>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @anime.user_id == current_user.id %>
      <%= link_to "Edit", edit_anime_path(@anime) %>
      <%= link_to "Delete", anime_path(@anime), method: :delete, data: {confirm: "Are you sure?" }%>
    <% end %>
  <% end %>
</div>
