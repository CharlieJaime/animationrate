<%= simple_form_for @anime do |f|%>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>
  <%= f.file_field :anime_img %>
  <%= f.input :title, label: "Animation title" %>
  <%= f.input :description %>
  <%= f.input :creator %>
  <%= f.button :submit %>
<% end %>
